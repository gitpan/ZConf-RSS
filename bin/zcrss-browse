use strict;
use warnings;
use Getopt::Std;
use ZConf::RSS;
use ZConf::RSS::GUI;

$Getopt::Std::STANDARD_HELP_VERSION = 1;

#version function
sub main::VERSION_MESSAGE {
	print "zcrss-browse 0.0.0\n";
}

#print help
sub main::HELP_MESSAGE {
	print "\n".
		  "-s <set>  The ZConf set to use\n";
}

#gets the options
my %opts=();
getopts('s:', \%opts);

#inits ZConf::RSS
my $zr = ZConf::RSS->new();
if($zr->{error}){
	warn('zcrss-browse: ZConf::RSS->new() errored');
	exit $zr->{error};
}

if (defined($opts{s})) {
	$zr->readSet($opts{s});
	if ($zr->{error}) {
		exit $zr->{error};
	}
}

my $zcrssgui=ZConf::RSS::GUI->new({obj=>$zr});
if($zr->{error}){
	warn('zcrss-browse: ZConf::RSS::GUI->new errored');
	exit $zr->{error};
}

$zcrssgui->view;
if($zr->{error}){
	warn('zcrss-browse: ZConf::RSS::GUI->view errored');
	exit $zr->{error};
}

=head1 NAME

zcrss-browse - Calls the view dialog for ZConf::RSS::GUI

=head1 SYNOPSIS

zcrss-browse [B<-s> <set>]

=head1 SWTICHES

=head2 -s <set>

If this is specified, this set is ran.

=head1 EXIT CODES

If a exit code is not listed below, it is what ever error value ZConf::RSS returned.

